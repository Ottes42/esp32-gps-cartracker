{
  "name": "gps-car-tracker",
  "version": "1.0.0",
  "description": "GPS car tracker with fuel consumption tracking",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --env-file=.env --env-file=.env.local --watch index.js",
    "dev:docker": "node --env-file=.env --watch index.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "testCsv": "node scripts/generateTestCSV.js",
    "testFuel": "node scripts/generateFuelData.js",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "nock": "^14.0.10",
    "standard": "^17.1.2",
    "supertest": "^7.0.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "index.js",
      "app.js",
      "scripts/**/*.js",
      "!scripts/build-firmware.sh",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "__tests__/helpers.js"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "gps",
    "tracking",
    "car",
    "fuel",
    "esphome",
    "iot"
  ],
  "author": "Michael Freund <ottes@ottes-techno.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ottes42/gps-car-tracker.git"
  }
}
